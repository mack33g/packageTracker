<%- include('partials/header.ejs'); %>
<body>
    <div><a href="/" id="home">🎁</a></div>
<form action="/addPackage" method="POST">
    <input type="hidden" name="userName" value="<%= userName %>">
    <input type="text" name="packageName" placeholder="What is the package?">
    <input type="text" name="trackingId" placeholder="Tracking ID">
    <button>Add</button>
</form>
<% results.forEach((result) => { %>
    <div class="package">
        <h2><%= result.name %></h2>
        <a href="<%= result.url %>"><%= result.trackingId %></a>
        <form action="/removePackage" method="POST">
            <input type="hidden" name="trackingId" value="<%= result.trackingId %>">
            <button>Delete</button>
        </form>
        <h3><%= result.status %></h3>
        <p><%= result.description %><p>
    </div>
<% }); %>